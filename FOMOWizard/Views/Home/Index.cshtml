@{
    Layout = null;
}

<!-- test -->

<html>
<head>
    <!-- Unicode character encoding - multi-language compatibility -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />
    <title>FOMO Operations Wizard</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container" id="form-container">
        <div class="justify-content-center">
            <img src="~/images/FOMO_Logo.png" style="width: 80px; height: 80px;" class="img-glu" />
        </div>
        <div>FOMO Wizard</div>
        <div class="container">
            <form method="post" action="~/Home/StaffLogin">
                <fieldset class="loginFieldset">
                    <div class="login-wrapper">
                        @*Email Input*@
                        <input type="email" name="txtLoginID" id="txtLoginID" placeholder="Email" required />
                    </div>

                    <div class="password-wrapper">
                        @*Password Input*@
                        <input type="password" name="txtPassword" id="txtPassword" placeholder="Password" required />
                    </div>

                    <div class="loginBtn-wrapper">
                        <input type="submit" id="btnStaffLogin" class="btn btn-danger" value="Login" />
                    </div>

                    <div>
                        <span style="color:red;">@TempData["Message"]</span>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</body>
</html>

